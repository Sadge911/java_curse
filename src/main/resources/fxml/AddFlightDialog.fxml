<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="ru.easet.aviacassa.ui.controller.AddFlightController"
          hgap="10" vgap="10">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <Label text="Номер рейса:"        GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="tfFlightNumber" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Откуда:"            GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="tfDepartureCity" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Куда:"              GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="tfArrivalCity"   GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Дата вылета:"       GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <DatePicker fx:id="dpDate"       GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Время (HH:MM):"     GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="tfTime"        GridPane.rowIndex="4" GridPane.columnIndex="1"
               promptText="10:30"/>

    <Label text="Места Economy:"    GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <Spinner fx:id="spEconomy"       GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Label text="Места Business:"    GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <Spinner fx:id="spBusiness"      GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    <Label text="Пилот, Копилот, Стюарды (через запятую):"
           GridPane.rowIndex="7" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
    <TextArea fx:id="taCrew" prefRowCount="2"
              GridPane.rowIndex="8" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

    <Label text="Цена Economy:"       GridPane.rowIndex="9"  GridPane.columnIndex="0"/>
    <TextField fx:id="tfPriceEco"     GridPane.rowIndex="9"  GridPane.columnIndex="1"/>

    <Label text="Цена Business:"      GridPane.rowIndex="10" GridPane.columnIndex="0"/>
    <TextField fx:id="tfPriceBiz"     GridPane.rowIndex="10" GridPane.columnIndex="1"/>

    <Button text="Сохранить" onAction="#onSave"
            GridPane.rowIndex="11" GridPane.columnIndex="0"/>
    <Button text="Отмена"   onAction="#onCancel"
            GridPane.rowIndex="11" GridPane.columnIndex="1"/>
</GridPane>
