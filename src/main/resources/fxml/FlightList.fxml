<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="rootPane"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ru.easet.aviacassa.ui.controller.FlightListController">
    <center>
        <TableView fx:id="flightTable" prefHeight="400" prefWidth="700">
            <columns>
                <TableColumn fx:id="colNumber"    text="Номер рейса"    prefWidth="120"/>
                <TableColumn fx:id="colRoute"     text="Маршрут"         prefWidth="200"/>
                <TableColumn fx:id="colTime"      text="Время вылета"    prefWidth="150"/>
                <TableColumn fx:id="colSeatsEco"  text="Свободно Economy" prefWidth="115"/>
                <TableColumn fx:id="colSeatsBiz"  text="Свободно Business" prefWidth="115"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button fx:id="btnAddFlight" text="Добавить рейс"/>
            <Button fx:id="btnBuyTicket" text="Купить билет"/>
            <Button fx:id="btnViewFlight" text="Просмотр рейса"/>
        </HBox>
    </bottom>
</BorderPane>
